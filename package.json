{
  "name": "storycap",
  "version": "2.0.0-alpha.3",
  "description": "A Storybook addon, Save the screenshot image of your stories! via puppeteer.",
  "main": "lib/index.js",
  "typings": "lib/index.d.ts",
  "bin": {
    "storycap": "lib/node/cli.js"
  },
  "scripts": {
    "clean": "rimraf lib",
    "build": "tsc",
    "format": "prettier --write \"src/**/*\" \"scripts/**/*\" \"*.md\"",
    "format:check": "prettier --check \"src/**/*\" \"scripts/**/*\"",
    "lint": "eslint \"src/**/*.ts\"",
    "doc:toc": "node scripts/add-toc.js",
    "doc:clihelp": "node scripts/cli-help.js",
    "doc": "yarn doc:toc && yarn doc:clihelp",
    "prepare": "yarn clean && yarn build && yarn doc",
    "jest": "jest",
    "e2e": "bash e2e.sh",
    "test": "npm run jest && npm run e2e",
    "regression": "reg-suit run"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/reg-viz/storybook-chrome-screenshot.git"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "author": "tsuyoshiwada",
  "contributors": [
    "Yosuke Kurami"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/reg-viz/storybook-chrome-screenshot/issues"
  },
  "homepage": "https://github.com/reg-viz/storybook-chrome-screenshot#readme",
  "files": [
    "lib",
    "assets",
    "CHANGELOG.md",
    "README.md",
    "LICENSE",
    "package.json",
    "register.js"
  ],
  "keywords": [
    "storybook",
    "addon",
    "puppeteer",
    "chrome",
    "screenshot",
    "capture",
    "visual-testing"
  ],
  "devDependencies": {
    "@types/jest": "^24.0.18",
    "@typescript-eslint/eslint-plugin": "^2.3.0",
    "@typescript-eslint/parser": "^2.3.0",
    "copy-dir": "^1.1.0",
    "cpy": "^7.3.0",
    "eslint": "^6.0.0",
    "eslint-config-prettier": "^6.0.0",
    "husky": "^3.0.2",
    "jest": "^24.9.0",
    "markdown-toc": "^1.2.0",
    "minimist": "^1.2.0",
    "prettier": "^1.18.2",
    "pretty-quick": "^1.11.1",
    "reg-keygen-git-hash-plugin": "^0.7.16",
    "reg-notify-github-plugin": "^0.7.21",
    "reg-publish-s3-plugin": "^0.7.22",
    "reg-suit": "^0.8.1",
    "ts-jest": "^24.1.0",
    "typescript": "^3.6.3",
    "typescript-eslint-language-service": "^1.3.0"
  },
  "dependencies": {
    "@types/chalk": "^2.2.0",
    "@types/minimatch": "^3.0.3",
    "@types/mkdirp": "^0.5.2",
    "@types/node": "^12.6.8",
    "@types/puppeteer": "^1.19.0",
    "@types/rimraf": "^2.0.2",
    "@types/wait-on": "^3.2.0",
    "@types/yargs": "^13.0.1",
    "chalk": "^2.4.1",
    "core-js": "^3.2.1",
    "imagesloaded": "^4.1.4",
    "minimatch": "^3.0.4",
    "mkdirp": "^0.5.1",
    "puppeteer": "^1.19.0",
    "rimraf": "^3.0.0",
    "wait-on": "^3.3.0",
    "yargs": "^14.0.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "testMatch": [
      "**/__tests__/*.(ts|tsx)",
      "**/*.test.(ts|tsx)"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "_old/.*",
      "examples/.*",
      "\\.d\\.ts$",
      "lib/.*"
    ],
    "testURL": "http://localhost"
  }
}
